<UserControl x:Class="ModernDesign.MVVM.View.DiscoveredView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernDesign.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <StackPanel>
        <TextBlock Text="Discover"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal">
            <Border Width="300"
                    Height="200"
                    CornerRadius="10">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Black" Offset="1.2"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="New insights"
                                   Foreground="Black"
                                   FontSize="32"
                                   Margin="20,10,10,0"/>
                        <TextBlock Text="New projects WPF."
                                   Foreground="Black"
                                   FontSize="18"
                                   Margin="20,10,10,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Width="300"
                    Height="200"
                    CornerRadius="10"
                    Margin="45,0,0,0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ffc554" Offset="0"/>
                        <GradientStop Color="#ffb73a" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <StackPanel>
                        <TextBlock Text="New insights"
                                   Foreground="Black"
                                   FontSize="22" FontWeight="Bold" FontStyle="Italic" TextAlignment="Center" Height="60" HorizontalAlignment="Center" Margin="0,40,0,40"/>
                    </StackPanel>
                </Grid>

            </Border>
        </StackPanel>

        <StackPanel>

            <TextBlock Text="Most Watched"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       Margin="0,20,0,20"/>

            <StackPanel Orientation="Horizontal">
                <Border Width="150"
                        Height="150"
                        Background="Beige"
                        CornerRadius="10"
                        Margin="0,0,15,0"/>

                <Border Width="150"
                        Height="150"
                        Background="AntiqueWhite"
                        CornerRadius="10"
                        Margin="0,0,15,0"/>

                <Border Width="150"
                        Height="150"
                        Background="Gray"
                        CornerRadius="10"
                        Margin="0,0,15,0"/>

                <Border Width="150"
                        Height="150"
                        Background="LavenderBlush"
                        CornerRadius="10"/>
            </StackPanel>

        </StackPanel>
    </StackPanel>


</UserControl>
